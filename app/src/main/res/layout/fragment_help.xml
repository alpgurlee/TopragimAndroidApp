<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back"
        app:title="Yardım" />

    <!-- İçerik Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Yardım İkonu -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_help_circle"
            app:tint="@color/blue" />

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Yardıma mı ihtiyacınız var?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Alt Metin -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="Her türlü sorularınız ve destek talepleriniz için bize ulaşabilirsiniz."
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Telefonla Ara Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/callSupportButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Telefonla Ara"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_phone"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:backgroundTint="@color/green"/>

        <!-- E-posta Gönder Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emailSupportButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:text="E-posta Gönder"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_email"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:backgroundTint="@color/blue"/>

    </LinearLayout>
</LinearLayout>